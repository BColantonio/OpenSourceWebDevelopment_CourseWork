extends layout

block content
  h1=title
   .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Sign Up

        // register form
        form(method='POST' action='/submit')
          div.form-group
            label(for='name') Name:
            input#name.form-control(type='text', placeholder='first and last' name='name')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='name@email.com' name='email')
          div.form-group
            label(for='comments') Comments:
            textarea#comments.form-control(type='text', placeholder='comments' name='comments')
          button.btn.btn-primary(type='submit') Sign up
  a(href='./index') index
  br
  a(href='./about') about
  br
  a(href='./form') form